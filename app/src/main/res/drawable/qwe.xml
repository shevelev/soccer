<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <solid android:color="#10CCCCCC" />
            <padding
                android:bottom="0dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <solid android:color="#20CCCCCC" />
            <padding
                android:bottom="0dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_dark_10" />
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>

</layer-list>
